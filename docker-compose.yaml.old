version: '3.8'

services:

  zookeeper:
    container_name: zookeeper
    image: confluentinc/cp-zookeeper:latest
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000

  kafka:
    container_name: kafka
    image: confluentinc/cp-kafka:latest
    depends_on:
      - zookeeper
    healthcheck:
      test: nc -z localhost 9092 || exit -1
      start_period: 15s
      interval: 5s
      timeout: 10s
      retries: 10
    ports:
       - "29092:29092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181 # must be the service name
      KAFKA_LISTENERS: LOCAL_CONNECTION://:9092,HOST_CONNECTION://:29092
      KAFKA_ADVERTISED_LISTENERS: LOCAL_CONNECTION://:9092,HOST_CONNECTION://:29092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: LOCAL_CONNECTION:PLAINTEXT,HOST_CONNECTION:PLAINTEXT      
      KAFKA_INTER_BROKER_LISTENER_NAME: LOCAL_CONNECTION
      KAFKA_AUTO_CREATE_TOPICS_ENABLE: "true"
      KAFKA_CREATE_TOPICS: "updates:1:1"

